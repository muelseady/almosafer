<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/colorPrimary">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="top"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/iv_offer_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="#200000"
                android:contentDescription="@string/txt_special_offer"
                android:scaleType="centerCrop"
                app:layout_scrollFlags="enterAlwaysCollapsed" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:maxButtonHeight="?attr/actionBarSize"
                app:titleTextColor="@color/colorAccent" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/container_nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_16">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                app:layout_constraintBottom_toTopOf="@+id/container_contacts"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_offer_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_4"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/container_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <com.dd.processbutton.iml.ActionProcessButton
                    android:id="@+id/btn_special_offer_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@color/colorAccent"
                    android:minWidth="60dp"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_16"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_8"
                    android:text="@string/txt_done_request"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_62"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_contacts"
                        style="@style/tv_request_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_4"
                        android:text="@string/txt_contact_us" />

                    <ImageView
                        android:id="@+id/iv_twitter"
                        style="@style/desc_social_media"
                        android:contentDescription="@string/dsc_social_media"
                        android:src="@drawable/twitter_icon" />

                    <ImageView
                        android:id="@+id/iv_fb"
                        style="@style/desc_social_media"
                        android:contentDescription="@string/dsc_social_media"
                        android:src="@drawable/fb_icon" />

                    <ImageView
                        android:id="@+id/iv_instagram"
                        style="@style/desc_social_media"
                        android:contentDescription="@string/dsc_social_media"
                        android:src="@drawable/instagram_icon" />

                    <ImageView
                        android:id="@+id/iv_snap"
                        style="@style/desc_social_media"
                        android:contentDescription="@string/dsc_social_media"
                        android:src="@drawable/snapchat_icon" />
                </LinearLayout>


            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>